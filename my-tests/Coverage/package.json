{
  "name": "coverage-report-tests",
  "version": "1.0.0",
  "description": "Rocket.Chat White-Box Testing - Complete Coverage Report",
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:html": "jest --coverage && firefox coverage/index.html"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/*.test.js",
      "!**/*.spec.js",
      "!**/mocks/**"
    ],
    "testMatch": ["**/*.test.js", "**/*.spec.js"],
    "coverageReporters": ["text", "text-summary", "html", "lcov"],
    "testPathIgnorePatterns": ["/node_modules/", "/coverage/"],
    "verbose": true
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0"
  }
}
